<display>
    <view time-unit="day,week,month,lifetime" name="account_report" columns="15">
        <section name="account_added">
            <row class="com.codenvy.analytics.services.view.DateRow">
                <parameter key="section-name" value="Account Added"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="users_accounts"/>
                <parameter key="description" value="Account Created"/>
            </row>
        </section>

        <section name="account_creation_type">
            <row class="com.codenvy.analytics.services.view.DateRow">
                <parameter key="section-name" value="Account Creation Type"/>
            </row>
            <!--row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="account_creation_type_google"/>
                <parameter key="description" value="From Google OAuth"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="account_creation_type_github"/>
                <parameter key="description" value="From GitHub OAuth"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="account_creation_type_email"/>
                <parameter key="description" value="From Email flow"/>
            </row-->
        </section>

        <section name="email_signups">
            <row class="com.codenvy.analytics.services.view.DateRow">
                <parameter key="section-name" value="Email Sign-Ups"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="singup_validation_email_send"/>
                <parameter key="description" value="Verification emails sent"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="singup_validation_email_confirmed"/>
                <parameter key="description" value="Confirmations received"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="singup_validation_email_not_confirmed"/>
                <parameter key="description" value="Waiting confirmations"/>
            </row>
        </section>
    </view>
</display>
