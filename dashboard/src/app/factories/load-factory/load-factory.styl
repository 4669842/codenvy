.load-factory-main-container
  position absolute
  width 100%
  height 100%

  .ide-loader
    height 100%
    width 100%
    background-color #1c253f

.load-factory-content
  width 100%

.load-factory-working-log
  margin 35px 0

.load-factory-back-link
  margin-left 100px
  margin-top 20px

.load-factory-download-link
  margin-top 20px
  margin-right 8px

.load-factory-retry-block
  margin-top 20px
  margin-right 27px

@media (min-width:959px) and (max-width:1599px)
  .load-factory-back-link
    margin-left 75px

@media (max-width:959px)
  .load-factory-retry-block
    margin-right 0

.load-factory-logo
  height 35px
  margin-top 20px
