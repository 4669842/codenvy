.factory-actions-panel
  margin-top -6px

  .factory-actions-input
    min-height 50px
    height 50px

  .che-select
    margin-top 4px
    margin-right 20px

  .factory-actions-list
    max-width 600px

    div
      outline none

    md-icon
      font-size 18px
      height auto
      width auto
      color $clear-foggy-sky-color
