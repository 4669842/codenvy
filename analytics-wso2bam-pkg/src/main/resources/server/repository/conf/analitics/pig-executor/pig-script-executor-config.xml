            <scripts>
                <script name="action.pig">
                    <parameters>
                        <parameter name="LOG" value="..." />
                        <parameter name="FROM_DATE" value="..." />
                        <parameter name="TO_DATE" value="..." />
                        <parameter name="USER" value="*" />
                        <parameter name="WS" value="*" />
                    </parameters>
                </script>
                <script name="set_active_by_users.pig">
                    <parameters>
                        <parameter name="LOG" value="..." />
                        <parameter name="FROM_DATE" value="..." />
                        <parameter name="TO_DATE" value="..." />
                        <parameter name="USER" value="*" />
                        <parameter name="WS" value="*" />
                        <parameter name="EVENT" value="build" />
                        <parameter name="FIELD" value="field_value" />
                    </parameters>
                </script>
            </scripts>
        </execution>
        <execution schedule="0/5 * * * * ?"> <!-- Execution every 5 seconds -->
            <scripts>
                <script name="product_usage_time_domains.pig">
                    <parameters>
                        <parameter name="LOG" value="..." />
                        <parameter name="FROM_DATE" value="..." />
