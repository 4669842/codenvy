<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:svg="urn:import:org.vectomatic.dom.svg.ui">

    <ui:with field="resources" type="com.codenvy.ide.permissions.client.PermissionsResources"/>

    <g:FlowPanel ui:field="panel" addStyleNames="{resources.permissionsCSS.permissionsIndicator}" debugId="permissions-panel">
        <svg:SVGImage resource="{resources.key}"/>
        <g:InlineLabel ui:field="rights" debugId="permissions-panel-rights"/>
        <g:FlowPanel ui:field="tooltip" addStyleNames="{resources.permissionsCSS.permissionsIndicatorTooltip}">
            <g:FlowPanel/>
            <g:FlowPanel addStyleNames="{resources.permissionsCSS.permissionsIndicatorTooltipHeader}">
                <svg:SVGImage resource="{resources.key}"/>
                <g:InlineLabel ui:field="tooltipTitle"/>
            </g:FlowPanel>
            <g:FlowPanel addStyleNames="{resources.permissionsCSS.permissionsIndicatorTooltipBody}">
                <g:HTML ui:field="tooltipMessage"/>
                <g:Anchor ui:field="tooltipLink"/>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
