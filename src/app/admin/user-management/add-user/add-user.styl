.admins-add-user-form
  margin 17px 12px 17px 12px
  min-width 720px
  max-width 80%

.admins-add-user-form .password-prompt,
.admins-add-user-form .che-input-desktop-label
  min-width 125px

.admins-add-user-form .form-input-fields
  margin 5px

.admins-add-user-form .password-prompt
  display block
  width 15%
  height 80px
  font-size 12px
  margin-right 5px
  color $disabled-color

.admins-add-user-form .password-prompt p
  margin-top 5px
  margin-bottom 5px

.admins-add-user-form .password-meter
  height 6px
  border-radius 6px

.admins-add-user-form che-button-primary,
.admins-add-user-form che-button-notice
  margin-right 5px
  float right
