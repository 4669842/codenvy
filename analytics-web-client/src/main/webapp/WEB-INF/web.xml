<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Analytics Service</display-name>

    <context-param>
        <param-name>javax.ws.rs.Application</param-name>
        <param-value>com.codenvy.dashboard.AnalyticsApplication</param-value>
    </context-param>

    <listener>
        <listener-class>org.everrest.core.servlet.EverrestInitializedListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>EverrestServlet</servlet-name>
        <servlet-class>org.everrest.core.servlet.EverrestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EverrestServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Analytics-application</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admins</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>


    <!-- Define the Login Configuration for this Application -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Analytics application</realm-name>
    </login-config>

    <!-- Security roles referenced by this web application -->
    <security-role>
        <role-name>admins</role-name>
    </security-role>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>AnalyticsApplication.html</welcome-file>
    </welcome-file-list>
</web-app>
