<display>
    <view name="accounts" on-demand="true">
        <section name="accounts">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="ID,Owner,Roles"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="accounts_list"/>
                <parameter key="fields" value="account_id,account_profile_email,account_roles"/>
            </row>
        </section>
    </view>

    <view name="account" on-demand="true">
        <section name="account">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="ID,Name,Email,Roles,Attributes"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="accounts_list"/>
                <parameter key="fields" value="account_id,account_profile_name,account_profile_email,account_roles,account_attributes"/>
            </row>
        </section>
    </view>

    <view name="account_users_roles" on-demand="true">
        <section name="account_users_roles">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="User,Roles,Workspace"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="account_users_roles_list"/>
                <parameter key="fields" value="user,roles,ws"/>
            </row>
        </section>
    </view>

    <view name="account_workspaces_list" on-demand="true">
        <section name="account_workspaces_list">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Workspace,Temporary,Roles"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="account_workspaces_list"/>
                <parameter key="fields" value="workspace_name,workspace_temporary,workspace_roles"/>
            </row>
        </section>
    </view>

    <view name="account_subscriptions_list" on-demand="true">
        <section name="account_subscriptions_list">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Subscription,Start Date,End Date,Properties"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="account_subscriptions_list"/>
                <parameter key="fields" value="subscription_service_id,subscription_start_date,subscription_end_date,subscription_properties"/>
                <parameter key="date-fields" value="subscription_start_date=yyyy-MM-dd,subscription_end_date=yyyy-MM-dd"/>
            </row>
        </section>
    </view>
</display>