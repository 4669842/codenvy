<display>
    <view name="users_profiles" on-demand="true">
        <section name="user_profile">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Email,First Name,Last Name,Company,Job"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="users_profiles_list"/>
                <parameter key="fields"
                           value="_id,user_first_name,user_last_name,user_company,user_job"/>
            </row>
        </section>
    </view>

    <view name="user_profile" on-demand="true">
        <section name="user_profile">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Email,First Name,Last Name,Company,Phone,Job"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="users_profiles_list"/>
                <parameter key="fields"
                           value="_id,user_first_name,user_last_name,user_company,user_phone,user_job"/>
            </row>
        </section>
    </view>

    <view name="user_data" on-demand="true">
        <section name="user_data">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles"
                           value="Number of Sessions,Total Time,Total Build Time,Total Run Time,Number of Active Projects,Number of Builds,Number of Debugs,Number of Deploys,Number of Factories"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="users_statistics_list"/>
                <parameter key="fields"
                           value="sessions,time,time_build,time_run,projects,builds,debugs,deploys,factories"/>
                <parameter key="time-fields" value="time,time_build,time_run"/>
            </row>
        </section>
    </view>

    <view name="user_sessions" on-demand="true">
        <section name="user_sessions">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Id,Workspace,Start Time,End Time,Duration"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="product_usage_sessions_list"/>
                <parameter key="fields" value="session_id,ws,start_time,end_time,time"/>
                <parameter key="time-fields" value="time"/>
                <parameter key="date-fields" value="start_time,end_time"/>
            </row>
        </section>
    </view>

    <view name="user_workspace_list" on-demand="true">
        <section name="user_workspace_list">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Name,Sessions,Time"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="usage_time_by_workspaces_list"/>
                <parameter key="fields" value="ws,sessions,time"/>
                <parameter key="time-fields" value="time"/>
            </row>
        </section>
    </view>

    <view name="user_activity" on-demand="true">
        <section name="user_activity">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Date,Console Log"/>

            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="users_activity_list"/>
                <parameter key="fields" value="date,message"/>
                <parameter key="date-fields" value="date"/>
            </row>
        </section>
    </view>

    <view name="users_events" on-demand="true">
        <section name="users_events">
            <row class="com.codenvy.analytics.services.view.TitleRow">
                <parameter key="titles" value="Action,Count"/>
            </row>
            <row class="com.codenvy.analytics.services.view.MetricRow">
                <parameter key="name" value="users_events"/>
                <parameter key="fields" value="action,count"/>
            </row>
        </section>
    </view>
</display>