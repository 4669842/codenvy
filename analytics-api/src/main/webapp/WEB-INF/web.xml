<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Analytics Service</display-name>

    <context-param>
        <param-name>javax.ws.rs.Application</param-name>
        <param-value>com.codenvy.analytics.AnalyticsApplication</param-value>
    </context-param>

    <listener>
        <listener-class>org.everrest.core.servlet.EverrestInitializedListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.codenvy.api.analytics.impl.MetricHandlerBootstrap</listener-class>
    </listener>

    <servlet>
        <servlet-name>EverrestServlet</servlet-name>
        <servlet-class>org.everrest.core.servlet.EverrestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EverrestServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Analytics-API</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>analytics-users</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Analytics api</realm-name>
    </login-config>

    <security-role>
        <role-name>analytics-users</role-name>
    </security-role>
</web-app>
