<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Analytics Service</display-name>

    <listener>
      <listener-class>com.codenvy.analytics.server.jobs.DailyJobsRunner</listener-class>
    </listener>
    <!-- Servlets -->
    
    <servlet>
      <servlet-name>queryServlet</servlet-name>
      <servlet-class>com.codenvy.analytics.server.QueryServiceImpl</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>AnalysisServlet</servlet-name>
      <servlet-class>com.codenvy.analytics.server.AnalysisServiceImpl</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>TimeLineServlet</servlet-name>
      <servlet-class>com.codenvy.analytics.server.TimeLineServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>AnalysisServlet</servlet-name>
      <url-pattern>/AnalyticsApplication/Analysis</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>TimeLineServlet</servlet-name>
      <url-pattern>/AnalyticsApplication/TimeLine</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>queryServlet</servlet-name>
      <url-pattern>/AnalyticsApplication/query</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Analytics-Web-Portal</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>cloud/admin</role-name>
            <role-name>cloud/manager</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>


    <!-- Define the Login Configuration for this Application -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Analytics application</realm-name>
    </login-config>

    <!-- Security roles referenced by this web application -->
    <security-role>
        <role-name>cloud/admin</role-name>
        <role-name>cloud/manager</role-name>
    </security-role>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>AnalyticsApplication.html</welcome-file>
    </welcome-file-list>
</web-app>
