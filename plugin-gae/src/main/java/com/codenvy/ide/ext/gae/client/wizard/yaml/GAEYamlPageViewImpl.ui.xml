<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="com.codenvy.ide.ext.gae.client.GAELocalizationConstant"/>
    <ui:with field="resource" type="com.codenvy.ide.ext.gae.client.GAEResources"/>

    <ui:style>
        .mainPanel {
            width: 100%;
            height: 100%;
            margin-top: 6px;
            margin-left: 6px;
        }

        .boxLabelPanel {
            width: 100%;
            margin-top: 20px;
            height: 20px;
        }

        .appEngineConfigLabel {
            margin-top: 25px;
            margin-left: 6px;
        }

        .labelWithFloatLeft {
            float: left;
            margin-top: 5px;
            margin-left: 12px;
        }

        .textBoxWithRightFloat {
            float: right;
            margin-right: 270px;
            width: 390px;
            height: 20px;
        }

        .infoAppIdLabel {
            margin-top: 17px;
            margin-left: 108px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.mainPanel}">
        <g:Label text="{locale.wizardAppEngineConfiguration}" addStyleNames="{style.appEngineConfigLabel}"/>

        <g:FlowPanel addStyleNames="{style.boxLabelPanel}">
            <g:Label text="{locale.wizardAppEngineApplicationId}" addStyleNames="{style.labelWithFloatLeft}"/>
            <g:TextBox ui:field="gaeAppId" addStyleNames="{style.textBoxWithRightFloat} {resource.gaeCSS.wizardTextBox}"/>
        </g:FlowPanel>

        <g:Label text="{locale.wizardLabelAppIdYaml}" addStyleNames="{style.infoAppIdLabel}"/>
    </g:FlowPanel>

</ui:UiBinder>